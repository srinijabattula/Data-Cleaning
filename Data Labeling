import pandas as pd
import os
file_path = r'C:\Users\xxyour file pathxx'
if os.path.exists(file_path):
    try:
        dataset = pd.read_csv(file_path, header=None) 
        print("Dataset loaded successfully.")
    except Exception as e:
        print(f"Error loading dataset: {e}")
else:
    print(f"File not found: {file_path}")
column_names_path = r'C:\Users\xxyour file pathxx'
if os.path.exists(column_names_path):
    with open(column_names_path, 'r') as file:
        column_names = [line.strip() for line in file.readlines()]
else:
    print(f"Column names file not found: {column_names_path}")
if 'dataset' in locals():
    # Adjust column names to match the dataset
    if len(column_names) > len(dataset.columns):
        column_names = column_names[:len(dataset.columns)]  
    elif len(column_names) < len(dataset.columns):
        column_names.extend(['Unnamed'] * (len(dataset.columns) - len(column_names))) 
    dataset.columns = column_names
    updated_file_path = r'C:\Users\xxyour file pathxx'
    dataset.to_csv(updated_file_path, index=False)
    print(f"Dataset saved with updated column names to {updated_file_path}")
else:
    print("Dataset could not be loaded, skipping column name assignment.")
