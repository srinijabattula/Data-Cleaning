import pandas as pd
df = pd.read_csv(r'file path', na_values=['NaN'])
df.head()  
df.dtypes  
print(f"Original shape: {df.shape}")

missing_info = list(df.columns[df.isnull().any()])
for col in missing_info:
    num_missing = df[col].isnull().sum()
    print(f'Number missing for column {col}: {num_missing}')
    percent_missing = num_missing / df.shape[0] * 100 
    print(f'Percent missing for column {col}: {percent_missing:.2f}%')

df_cleaned = df.dropna()
print(f"Shape after dropping rows with missing values: {df_cleaned.shape}")

df_cleaned = df_cleaned.dropna(how='all', axis=1)
print(f"Shape after dropping columns with all missing values: {df_cleaned.shape}")

missing_after_cleaning = df_cleaned.isnull().sum()
missing_after_cleaning[missing_after_cleaning > 0]  

df_cleaned.to_csv(r'new file path', index=False)

